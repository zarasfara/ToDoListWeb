@using ToDoList.Domain
@model IEnumerable<ToDoList.Api.ModelRequests.GetTask>

@{
    ViewData["Title"] = "Задачи";
}

<div class="container">
    <h2><i class="bi bi-card-checklist text-primary"></i> Список задач</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить задачу
        </a>
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox"></i> Задач пока нет. Создайте первую!
        </div>
    }
    else
    {
        <table class="table table-hover">
            <thead class="table-light">
            <tr>
                <th><i class="bi bi-fonts"></i> Название</th>
                <th><i class="bi bi-tag"></i> Тип</th>
                <th><i class="bi bi-flag"></i> Статус</th>
                <th><i class="bi bi-gear"></i> Действия</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var t in Model)
            {
                // Определяем CSS-класс на основе типа задачи
                var typeClass = t.Type switch
                {
                    TaskType.Priority => "task-type-priority",
                    TaskType.Repeating => "task-type-repeating",
                    _ => "task-type-regular",
                };

                var statusClass = t.StateName?.ToLower() switch
                {
                    "completed" => "status-completed",
                    "inprogress" => "status-inprogress",
                    _ => "status-todo",
                };

                // Русские названия для типов задач
                var displayType = t.Type switch
                {
                    TaskType.Regular => "Обычная",
                    TaskType.Priority => "Приоритетная",
                    TaskType.Repeating => "Повторяющаяся",
                    _ => "Обычная",
                };

                // Русские названия для статусов
                var displayStatus = t.StateName switch
                {
                    "New" => "Новая",
                    "InProgress" => "В работе",
                    "Completed" => "Завершена",
                    _ => t.StateName,
                };

                <tr>
                    <td><strong>@t.Title</strong></td>
                    <td><span class="badge @typeClass rounded-pill px-3 py-2">@displayType</span></td>
                    <td><span class="badge @statusClass rounded-pill px-3 py-2">@displayStatus</span></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil"></i> Редактировать
                        </a>
                        <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-danger btn-sm me-1">
                            <i class="bi bi-trash"></i> Удалить
                        </a>
                        @if (t.StateName != "Completed")
                        {
                            <a asp-action="NextState" asp-route-id="@t.Id" class="btn btn-success btn-sm">
                                <i class="bi bi-arrow-right-circle"></i> Далее
                            </a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
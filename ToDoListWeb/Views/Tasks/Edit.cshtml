@model ToDoListWeb.Models.TaskItem

<div class="container">
    <h2><i class="bi bi-pencil-square text-warning"></i> Edit Task</h2>

    <form method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label class="form-label"><i class="bi bi-fonts"></i> Title</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-4">
            <label class="form-label"><i class="bi bi-card-text"></i> Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-4">
            <label class="form-label"><i class="bi bi-tags"></i> Type</label>
            <select asp-for="Type" class="form-select">
                <option value="0">Regular</option>
                <option value="1">Priority</option>
                <option value="2">Repeating</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success px-4">
            <i class="bi bi-floppy"></i> Save Changes
        </button>
        <a href="/Tasks" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>